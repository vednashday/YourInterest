<% include ./partials/header.ejs %>
<div class="min-h-screen bg-zinc-900 text-white px-10 py-10 flex justify-center items-center">
    <form action="/edit" method="post" class="bg-zinc-800 p-6 rounded-xl w-full max-w-md space-y-4">
        <h2 class="text-2xl font-semibold mb-2">Edit Profile</h2>

    <input type="text" name="name" value="<%= user.name %>" placeholder="Full Name" class="w-full px-4 py-2 rounded-md text-white ring-1" />
    <input type="text" name="username" value="<%= user.username %>" placeholder="Username" class="w-full px-4 py-2 rounded-md text-white ring-1" />
    <input type="email" name="email" value="<%= user.email %>" placeholder="Email" class="w-full px-4 py-2 rounded-md text-white ring-1" />
    <input type="text" name="contact" value="<%= user.contact %>" placeholder="Contact" class="w-full px-4 py-2 rounded-md text-white ring-1" />

    <button type="submit" class="bg-red-700 text-white px-4 py-2 rounded-md hover:bg-red-800">Save Changes</button>
    </form>
</div>
<% include ./partials/footer.ejs %>