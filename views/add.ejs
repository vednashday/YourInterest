<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 flex items-center justify-center px-5  text-white">
    <form 
        action="/createpost" 
        method="post" 
        enctype="multipart/form-data" 
        class="w-full max-w-lg bg-zinc-700 p-8 rounded-2xl shadow-xl mt-20 space-y-5"
    >
        <h1 class="text-2xl font-bold text-center">Create a New Post</h1>
        <hr class="border-zinc-500 opacity-30">

        <!-- Image Upload -->
        <div>
            <label class="block text-sm mb-1">Upload Image</label>
            <input 
                class="w-full py-2 px-3 rounded-md bg-zinc-800 border border-zinc-600 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-red-500" 
                type="file" 
                name="image"
            >
        </div>

        <!-- Title -->
        <div>
            <label class="block text-sm mb-1">Title</label>
            <input 
                class="w-full py-2 px-3 rounded-md bg-zinc-800 border border-zinc-600 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-red-500" 
                type="text" 
                placeholder="Enter a title..." 
                name="title" 
                required
            >
        </div>

        <!-- Description -->
        <div>
            <label class="block text-sm mb-1">Description</label>
            <textarea 
                class="w-full h-40 py-2 px-3 rounded-md bg-zinc-800 border border-zinc-600 placeholder-gray-400 resize-none focus:outline-none focus:ring-2 focus:ring-red-500" 
                placeholder="Enter a description..." 
                name="description" 
                required
            ></textarea>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
            <input 
                class="w-full py-2 px-4 bg-red-600 hover:bg-red-500 transition-colors rounded-md text-white font-semibold cursor-pointer" 
                type="submit" 
                value="Create Post"
            >
        </div>
    </form>
</div>

<% include ./partials/footer.ejs %>
