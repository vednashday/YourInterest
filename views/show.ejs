<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 text-white ">
  <div class="columns-1 sm:columns-2 md:columns-3 lg:columns-4 gap-4 p-10 space-y-4 py-25">
    <% user.posts.forEach(function(elem){ %>
      <div class="break-inside-avoid bg-sky-400 rounded-lg shadow-md overflow-hidden ">
        <img class="w-full object-cover rounded-t-lg" src="/images/uploads/<%= elem.image %>" alt="">
        <div class="p-3 flex flex-row justify-between items-center">
          <h5 class="text-sm font-semibold text-zinc-800"><%= elem.title %></h5>
          <div>
            <a href="/editpost/<%= elem._id %>" class="px-5 py-1 bg-zinc-700 rounded-full text-white text-md">Edit</a>
            <a href="/deletepost/<%= elem._id %>" class="px-4 py-1 bg-red-700 rounded-full text-white text-md">Delete</a>
          </div>

        </div>
        
      </div>
    <% }) %>
  </div>
</div>

<% include ./partials/footer.ejs %>


